<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@drawable/boder_edittext_login"
    android:paddingHorizontal="16dp"
    android:paddingTop="10dp">
   <ImageView
       android:id="@+id/imgBill"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:src="@drawable/ic_bill_48"/>



    <TextView
        android:id="@+id/tvIdBill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:text="Mã HĐ: dávdjkasvdjasdiashd"
        android:textColor="@color/green0B8C7C"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBill"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateBill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:text="Date: DD/MM/YYYY"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvIdBill"
        app:layout_constraintTop_toBottomOf="@+id/tvIdBill" />

    <TextView
        android:id="@+id/tvQuantityBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_baseline_production_quantity_limits_24"
        android:text="Quantity: 5C"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="@+id/tvDateBill"
        app:layout_constraintTop_toBottomOf="@+id/tvDateBill" />

    <TextView
        android:id="@+id/tvSumPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_attach_money_24"
        android:text="Price: 780$"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvQuantityBill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvQuantityBill" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>


