<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brownEDE3D3"
    android:padding="15dp"
    tools:context=".screens.MenuScreenFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImageProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:src="@drawable/imgdog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Admin name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/cvImageProfile"
        app:layout_constraintTop_toTopOf="@+id/cvImageProfile" />

    <TextView
        android:id="@+id/tvEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/green0B8C7C"
        app:layout_constraintBottom_toBottomOf="@+id/cvImageProfile"
        app:layout_constraintStart_toStartOf="@+id/tvNameProfile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_mode_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tvEditProfile" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvEditProfile"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/tvMyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:text="My Profile"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="@drawable/border_item_for_work"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tvMyBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_book_24"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:text="My Bookings"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="@drawable/border_item_for_work"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyProfile" />

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:text="Settings"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="@drawable/border_item_for_work"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMyBookings" />


    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/ic_baseline_logout_24"
        android:drawablePadding="16dp"
        android:text="Logout"
        android:padding="10dp"
        android:background="@drawable/border_item_for_work"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>