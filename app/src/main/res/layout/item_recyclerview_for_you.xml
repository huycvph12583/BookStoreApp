<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/border_item_for_work"
    android:layout_marginVertical="5dp"
    android:layout_marginStart="15dp"
    app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/img_item_for_you"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_margin="6dp"
        android:src="@drawable/imgdog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvNameBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:text="Pasta"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img_item_for_you" />

    <TextView
        android:id="@+id/tvPriceBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:text="Pasta"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvNameBook" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_see_detail"
        android:fontFamily="@font/poppins_regular"
        android:paddingHorizontal="5dp"
        android:text="See Details"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceBook" />
</androidx.constraintlayout.widget.ConstraintLayout>